variable "aws_region" {
  description = "AWS Region"
  type        = string
  default     = "us-east-1"
}

variable "project_name" {
  description = "Project Name"
  type        = string
  default     = "hello-world-app"
}

variable "environment" {
  description = "Deployment environment"
  type        = string
  default     = "dev"
}

variable "vpc_cidr" {
  description = "CIDR block for the VPC"
  type        = string
  default     = "10.0.0.0/16"
}

variable "public_subnet_1_cidr" {
  description = "CIDR block for the first public subnet"
  type        = string
  default     = "10.0.1.0/24"
}

variable "public_subnet_2_cidr" {
  description = "CIDR block for the second public subnetwork"
  type        = string
  default     = "10.0.2.0/24"
}

variable "availability_zone_1" {
  description = "First availability zone"
  type        = string
  default     = "us-east-1a"
}

variable "availability_zone_2" {
  description = "Second availability zone"
  type        = string
  default     = "us-east-1b"
}

variable "instance_type" {
  description = "EC2 instance type"
  type        = string
  default     = "t2.micro"
}

variable "docker_image" {
  description = "Docker Hub image to be deployed"
  type        = string
  default     = "erick1109/hello-world-app:v1"
}

variable "min_instances" {
  description = "Minimum number of instances in Auto Scaling"
  type        = number
  default     = 3
}

variable "max_instances" {
  description = "Maximum number of instances in Auto Scaling"
  type        = number
  default     = 7
}

variable "desired_capacity" {
  description = "Desired capacity in Auto Scaling"
  type        = number
  default     = 3
}